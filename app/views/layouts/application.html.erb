<!DOCTYPE html>
<html>
	<head>
		<title>ECommerce</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag			 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
		<nav class="navbar navbar-inverse navbar-default" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">
						BOARD
					</a>
				</div>
				<div class="collapse navbar-collapse">
					<% if user_signed_in? %>
						<p class="navbar-text navbar-right">
						Signed in as <%= current_user.email %> | <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>								
					</p>
					<p class="navbar-text navbar-right">
					</p>
				<% else %>
					<p class="navbar-text navbar-right">
					<%= link_to('Login', new_user_session_path)  %> or <%= link_to "Sign up", new_user_registration_path %> 
					</p>
				<% end %>
				<p class="navbar-text navbar-right">
				</p>
				</div>
			</div>
		</nav>

		<!-- Page Content -->
		<div class="container">
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>

			<!-- /.container -->

			<div class="container">

				<hr>

				<!-- Footer -->
				<footer>
					<div class="row">
						<div class="col-lg-12">
							<p>Copyright &copy; Jan Kurzyd≈Ço 2017</p>
						</div>
					</div>
				</footer>

			</div>
			<!-- /.container -->
		</div>

	</body>
</html>
